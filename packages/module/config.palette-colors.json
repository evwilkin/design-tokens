{
  "source": ["tokens/default/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "patternfly/css",
      "buildPath": "build/css/",
      "prefix": "pf-t",
      "files": [{
        "destination": "_tokens-palette.scss",
        "format": "customFormat",        
        "options": {
          "outputReferences": true
        },
        "filter": {
          "attributes": {
            "category": "color"
          }
        }
      }
    ]
    }
  }
}
