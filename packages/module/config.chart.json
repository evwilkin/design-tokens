{
  "source": ["tokens/chart/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "patternfly/css",
      "buildPath": "build/css/",
      "prefix": "pf-t",
      "files": [{
        "destination": "_tokens-charts.scss",
        "format": "css/variables",
        "options": {
          "outputReferences": true
        },
        "filter": {
          "attributes": {
            "category": "chart"
          }
        }
      }
    ]
    }
  }
}
