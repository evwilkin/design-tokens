{
  "name": "@patternfly/style-dictionary",
  "version": "1.0.0",
  "description": "Store global tokens for the PatternFly design system - used to generate scss files and figma variables",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "build:scss": "style-dictionary build --config config.default.json && style-dictionary build --config config.dark.json && style-dictionary build --config config.palette-colors.json",
    "clean": "rimraf dist",
    "docs:develop": "pf-docs-framework start",
    "docs:build": "pf-docs-framework build all --output public",
    "docs:serve": "pf-docs-framework serve public --port 5000",
    "docs:screenshots": "pf-docs-framework screenshots --urlPrefix http://localhost:5000",
    "test:a11y": "patternfly-a11y --config patternfly-a11y.config",
    "serve:a11y": "yarn serve coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/style-dictionary"
  },
  "author": "Red Hat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/patternfly/style-dictionary/issues"
  },
  "homepage": "https://github.com/patternfly/style-dictionary#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@patternfly/react-core": "^4.276.6"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18",
    "react-dom": "^16.8 || ^17 || ^18"
  },
  "devDependencies": {
    "@patternfly/documentation-framework": "^1.10.1",
    "@patternfly/patternfly": "^4.224.2",
    "@patternfly/patternfly-a11y": "^4.3.1",
    "@patternfly/react-code-editor": "^4.82.113",
    "@patternfly/react-table": "^4.112.39",
    "react-monaco-editor": "^0.51.0",
    "rimraf": "^2.6.2",
    "style-dictionary": "^3.8.0"
  }
}
